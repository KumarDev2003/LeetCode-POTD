
Question link:- https://leetcode.com/problems/apply-operations-to-an-array/description/?envType=daily-question&envId=2025-03-01

Video link:- https://www.youtube.com/watch?v=GeRdQcunrU4&list=PLDvvnZJ6HagstUFdfY1B1iOnbRkKkQvoV&index=4&t=511s&pp=gAQBiAQB

class Solution {
public:
    void setZero(int& i, vector<int>& nums){
        int n = nums.size();
        while(i < n){
            if(nums[i] == 0){
                break;
            }
            i++;
        }
    }
    vector<int> applyOperations(vector<int>& nums) {
        int n = nums.size();
        for(int i=0; i<n-1; i++){
            if(nums[i] == nums[i+1]){
                nums[i] = 2*nums[i];
                nums[i+1] = 0;
            }
        }
        int i = 0;
        setZero(i, nums);
        int j = i+1;
        while(j < n){
            if(nums[j] != 0){
                if(i < n) swap(nums[i], nums[j]);
                setZero(i, nums);
            }
            j++;
        }
        return nums;
    }
};
